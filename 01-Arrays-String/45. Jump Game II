class Solution {
    public int jump(int[] nums) {
        if(nums.length<=1)return 0;
        int jump=0;
        int designation=nums.length-1;
        int coverage =0;
        int maxreach=0;
        
        for(int i=0;i<nums.length;i++){
            if(coverage<i+nums[i])coverage =i+nums[i];
            if(i==maxreach){
                maxreach=coverage;
                jump++;
                if(coverage>=designation)return jump;
            }
        }
        return jump;
    }
}
