class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int[] res =new int[nums1.length+nums2.length];
        int i=0;
        int j=0;
        int k=0;
        double v=0;
        while(i<nums1.length &&j<nums2.length){
            if(nums1[i]<nums2[j]){
                res[k++]=nums1[i++];
            }else{
                res[k++]=nums2[j++];
            }
        }
        int median =res.length/2;
        while(i<nums1.length&&k<=median){
            res[k++]=nums1[i++];
        }
        while(j<nums2.length&&k<=median){
            res[k++]=nums2[j++];
        }
        if(k>=(res.length/2)){
            if(res.length%2==0){
               median =res.length/2;
               v =(double) (res[median]+res[median-1])/2;
            }else{
                v=(double)res[res.length/2];
            }
        }
        return v;
    }
}
